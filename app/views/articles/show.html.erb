<h1>Article#show</h1>

<h4>One Article detail.</h4>
<ul>
    <p>
        <%= @article.title%>
    </p>
    <p>
        <%= @article.body%>
    </p>
    <ul>
        <li>
            <%= link_to "Edit" , edit_article_path(@article) %>
        </li>
        <li>
            <%= link_to "Delete" , article_path(@article) ,data:{ turbo_method: :delete, turbo_confirm: :"Are you sure
                to delete?" } %>
        </li>
    </ul>
</ul>
<h2>Comments</h2>
<%= render @article.comments %>

    <h2>Add a comment:</h2>
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
        <p>
            <%= form.label :commentor %><br>
                <%= form.text_field :commentor %>
        </p>
        <p>
            <%= form.label :body %><br>
                <%= form.text_area :body %>
        </p>
        <p>
            <%= form.submit %>
        </p>
        <% end %>